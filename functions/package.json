  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.17",
    "stripe": "^8.133.0",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "copyfiles": "^1.0.0",
    "firebase-functions-test": "^0.2.0",
    "rimraf": "^3.0.2",
    "tslint": "^5.12.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
